{
  "name": "my-app",
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "start": "nuxt start",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-typescript": "^7.13.0",
    "@nuxt/typescript-runtime": "^2.1.0",
    "babel-jest": "^26.6.3",
    "nuxt": "^2.15.4",
    "nuxt-property-decorator": "^2.9.1",
    "vue-jest": "^3.0.7"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^2.1.0",
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "testMatch": [
      "<rootDir>/unit-test/**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
